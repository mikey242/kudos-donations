{% macro progress(goal, total) %}
    {% if goal > 0 and total >= 0 %}
        <div class="kd-w-full">
            <div data-total="{{ total }}" data-goal="{{ goal }}"
                 class="kudos-campaign-progress kd-flex kd-relative kd-shadow-inner kd-my-5 kd-overflow-hidden kd-bg-gray-200 kd-rounded kd-w-full"
                 style="height: 35px">
