    </label>
{% endmacro %}

{% macro radio(props) %}

    {% set global = 'kd-transition kd-ease-in-out kd-border-solid kd-cursor-pointer kd-text-left kd-m-0 kd-placeholder-gray-500' %}
    {% set checked = 'checked:kd-bg-primary' %}
    {% set focus = 'focus:kd-outline-none kd-ring-primary focus:kd-ring-2 kd-ring-offset-2' %}
    {% set generic = 'kd-rounded-full kd-duration-75 kd-bg-white kd-shadow-inner kd-border kd-border-primary kd-inline-block kd-w-4 kd-h-4 kd-m-2 kd-p-0 kd-align-middle kd-min-w-1 kd-leading-none kd-outline-none kd-text-center kd-clear-none' %}
    {% set styles = [] | merge([ global, checked, focus, generic ]) %}

    <div class="kd-flex kd-justify-center kd-items-center kd-mt-4">
        {% for value, label in props.options %}
            {% set id = props.id ~ '-' ~ value %}
            <label for="{{ id }}" class="kd-flex kd-items-center kd-cursor-pointer kd-font-normal kd-mr-3 kd-mt-2">
                <input
                        name="{{ props.name }}"
                        id="{{ id }}"
                        class="{{ styles | join(' ') }}"
                        value="{{ value }}"
                        type="radio"
                        {{ ( props.selected == value ? 'checked' : '' ) }}
                />
                {{ label }}
            </label>
        {% endfor %}
    </div>
{% endmacro %}

{% macro checkbox(props) %}

    {% set global = 'kd-transition kd-ease-in-out kd-border-solid kd-cursor-pointer kd-text-left kd-m-0 kd-placeholder-gray-500' %}
    {% set checked = 'checked:kd-bg-primary' %}
