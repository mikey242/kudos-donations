{% macro text(props) %}

    {% set global = 'kd-transition kd-ease-in-out kd-border-solid kd-cursor-pointer kd-text-left kd-m-0 kd-placeholder-gray-500' %}
    {% set focus = 'focus:kd-outline-none focus:kd-border-primary' %}
    {% set generic = 'kd-cursor-text kd-appearance-none kd-leading-normal kd-bg-transparent kd-border-gray-300 kd-border-2 kd-border-solid focus:kd-border-primary kd-transition-colors kd-ease-in-out kd-rounded kd-w-full kd-py-2 kd-px-3 kd-text-base kd-text-gray-700' %}
    {% set styles = [] | merge([ global, focus, generic ]) %}

    <label for="{{ props.id }}" class="kd-inline-block kd-cursor-pointer kd-font-normal kd-mr-2 kd-mt-2 kd-w-full">
        <input
                name="{{ props.name }}"
                id="{{ props.id }}"
                placeholder="{{ props.label }}"
                type="{{ props.type ?? 'text' }}"
                class="{{ styles | join(' ') }}"
                {{ ('true' == props.required|default('true') ? "required" : '') }}
                {% for key, value in props.atts %}
                    {{ key ~ '=' ~ value }}
                {% endfor %}
        />
    </label>
{% endmacro %}

{% macro text_area(props) %}

    {% set global = 'kd-transition kd-ease-in-out kd-border-solid kd-cursor-pointer kd-text-left kd-m-0 kd-placeholder-gray-500' %}
    {% set focus = 'focus:kd-outline-none focus:kd-border-primary' %}
    {% set generic = 'kd-cursor-text kd-appearance-none kd-leading-normal kd-bg-transparent kd-border-gray-300 kd-border-2 kd-border-solid kd-transition-colors kd-ease-in-out kd-rounded kd-w-full kd-py-2 kd-px-3 kd-text-base kd-text-gray-700' %}
    {% set styles = [] | merge([ global, focus, generic ]) %}

    <label class="kd-inline-block kd-cursor-pointer kd-font-normal kd-mr-2 kd-mt-2 kd-w-full">

        <textarea
                name="{{ props.name }}"
                id="{{ props.id }}"
                placeholder="{{ props.label }}"
                class="{{ styles | join(' ') }}"
                maxlength="255"
                rows="4" cols="50"
                {{ ('true' == props.required|default('true') ? "required" : '') }}
                {% for key, value in props.atts %}
                    {{ key ~ '=' ~ value }}
                {% endfor %}
