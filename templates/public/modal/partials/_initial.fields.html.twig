{% import "/public/modal/macros/form.html.twig" as forms %}

{% if amount.type == 'fixed' %}
    <div class="kudos_amounts">
        {% for key,value in amount.fixed_values %}
            <div class="kudos_radio_amount">
                <input id="amount-{{ modal_id }}-{{ key }}" {{ key==0 ? 'checked' : '' }} type="radio" name="value" value={{ value }} />
                <label for="amount-{{ modal_id }}-{{ key }}">€{{ value }}</label>
            </div>
        {% endfor %}
    </div>
{% endif %}

{% if amount.type == 'open' %}
    {{ forms.input('value', __('Amount (€)', 'kudos-donations'), 'text', '', true, true, 'min=1 data-type=currency') }}
{% endif %}

{{ forms.input('name', __('Name', 'kudos-donations')) }}
{{ forms.input('email_address', __('E-mail address', 'kudos-donations')) }}

{% if(subscription.enabled) %}
    {{ forms.radio('payment_frequency', {
        'oneoff': __('One-off', 'kudos-donations'),
        'recurring': __('Recurring', 'kudos-donations')
    }, 'oneoff') }}
{% else %}
    <input required checked type="hidden" name="payment_frequency" value="oneoff" />
{% endif %}