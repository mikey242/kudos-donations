{% from "/public/macros/buttons.html.twig" import icon %}

<div id="kudos-modal-{{ id ?: '1' }}" class="kudos-modal {{ class }} kd-absolute kd-hidden kd-z-1050"
     aria-hidden="true">
    <div class="kudos-modal-overlay kd-flex kd-justify-center kd-items-center kd-fixed kd-top-0 kd-left-0 kd-w-full kd-h-full kd-bg-[#1a202ccc]"
         tabindex="-1">
        <div data-page="1"
             class="kudos-modal-container kd-bg-white kd-p-8 kd-rounded-lg kd-max-h-screen kd-max-w-lg kd-relative kd-overflow-hidden kd-origin-right"
             role="dialog" aria-modal="true" aria-labelledby="kudos_modal_title">
            <header class="kudos_modal_header kd-flex kd-items-center kd-justify-between">

                    <span class="kd-mr-3 kd-inline-block kd-flex" title="Kudos Donations">
                        {% if(logo_url) %}
                            <img alt="Logo" class="kd-h-6" src="{{ logo_url }}">
                        {% endif %}
                    </span>
                {% block header %}
                {% endblock header %}
                {{ icon('close', __('Close modal', 'kudos-donations'), 5) }}
            </header>
            <div class="kd-mt-4 kd-block">
                <p class="kd-text-center kd-block kd-font-normal kd-mb-4">
                    <small class="kudos_error_message kd-text-sm kd-text-red-500"></small>
                </p>
                {% block content %}
                {% endblock content %}
                <i class="kd-spinner kd-animate-loader-spin kd-hidden kd-bg-contain kd-absolute kd-top-1/2 kd-left-1/2 kd-w-8 kd-h-8 kd--ml-4 kd--mt-4 kd-z-1">
                    {{ spinner | raw }}
                </i>
            </div>
        </div>
    </div>
</div>