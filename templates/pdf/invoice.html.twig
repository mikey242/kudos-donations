{% extends 'pdf/base.html.twig' %}

{% block preheader %}
    {{ __('This is a receipt for your recent donation on', 'kudos-donations') }} {{ purchase_date | date('d/m/y') }}
{% endblock preheader %}

{% block body %}
    <table class="purchase" width="100%" cellpadding="0" cellspacing="0" role="presentation">
        <tr>
            <td>
                <h2 style="margin-bottom:0">{{ company_name }}</h2>
                <p>{{ company_address | nl2br}}</p>
            </td>
            <td>
                <h2 class="align-right" style="margin-bottom:0">{{ donor_name }}</h2>
                <p class="align-right">
                    {{ donor_street }}<br/>
                    {{ donor_postcode }} {{ donor_city }}
                </p>
            </td>
        </tr>
        <tr>
            <td>
                <h3>{{ __('Order ID', 'kudos-donations') }}: {{order_id}}</h3></td>
            <td>
                <h3 class="align-right">{{ __('Date', 'kudos-donations') }}: {{date | date('d/m/y')}}</h3></td>
        </tr>
        <tr>
            <td colspan="2">
                <table class="purchase_content" width="100%" cellpadding="0" cellspacing="0">
                    <tr>
                        <th class="purchase_heading" align="left">
                            <p class="f-fallback">{{ __('Description', 'kudos-donations') }}</p>
                        </th>
                        <th class="purchase_heading" align="right">
                            <p class="f-fallback">{{ __('Amount', 'kudos-donations') }}</p>
                        </th>
                    </tr>
                    <tr>
                        <td width="80%" class="purchase_item"><span class="f-fallback">{{description}}</span></td>
                        <td class="align-right" width="20%" class="purchase_item"><span class="f-fallback">{{amount}}</span></td>
                    </tr>
                    <tr>
                        <td width="80%" class="purchase_footer" valign="middle">
                            <p class="f-fallback purchase_total purchase_total--label">{{ __('Total', 'kudos-donations') }}</p>
                        </td>
                        <td width="20%" class="purchase_footer" valign="middle">
                            <p class="f-fallback purchase_total">{{amount}}</p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
{% endblock body %}