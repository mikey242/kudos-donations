{
  "name": "iseard-media/kudos-donations",
  "description": "A modern and easy to use donation plugin for WordPress.",
  "type": "wordpress-plugin",
  "prefer-stable": true,
  "minimum-stability": "dev",
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "7.2.5"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  },
  "require": {
    "ext-json": "*",
    "mollie/mollie-api-php": "^2.32.0",
    "monolog/monolog": "^2.0",
    "php": ">=7.2.5",
    "php-di/invoker": "^2.0",
    "php-di/php-di": "^6.3",
    "psr/log": "1.1.*",
    "symfony/config": "^5.3",
    "symfony/polyfill-ctype": "1.28.*",
    "symfony/polyfill-mbstring": "1.28.*",
    "twig/twig": "^3.0",
    "woocommerce/action-scheduler": "^3.1"
  },
  "require-dev": {
    "vlucas/phpdotenv": "^5.1",
    "squizlabs/php_codesniffer": ">=3.7.2",
    "automattic/vipwpcs": ">=2.3.3",
    "wp-coding-standards/wpcs": ">=2.3.0",
    "phpcompatibility/phpcompatibility-wp": "*",
    "phpcompatibility/php-compatibility": "^9.3",
    "filp/whoops": "^2.13",
    "phpunit/phpunit": "10.*"
  },
  "scripts": {
    "build-production": [
      "composer install --optimize-autoloader --no-dev",
      "npm run production"
    ],
    "make-zip": [
      "rm -f kudos-donations.zip",
      "php wp-cli.phar dist-archive . ./kudos-donations.zip --allow-root"
    ],
    "release": [
      "@build-production",
      "@make-zip"
    ]
  },
  "autoload": {
    "psr-4": {
      "Kudos\\": "app/"
    }
  }
}
