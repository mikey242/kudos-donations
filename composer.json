{
	"name": "iseard-media/kudos-donations",
	"description": "A modern and easy to use donation plugin for WordPress.",
	"type": "wordpress-plugin",
	"prefer-stable": true,
	"license": "proprietary",
	"minimum-stability": "dev",
	"config": {
		"classmap-authoritative": true,
		"optimize-autoloader": true,
		"sort-packages": true,
		"platform": {
			"php": "7.4"
		},
		"allow-plugins": {
			"typisttech/imposter-plugin": false,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"phpstan/extension-installer": true,
			"automattic/jetpack-autoloader": true
		}
	},
	"require": {
		"php": ">=7.4",
		"ext-json": "*",
		"automattic/jetpack-autoloader": "^4.0",
		"dompdf/dompdf": "^3.0",
		"mollie/mollie-api-php": "^2.32.0",
		"monolog/monolog": "^2.9",
		"psr/log": "1.1.*",
		"symfony/config": "^5.4",
		"symfony/dependency-injection": "^5.4",
		"symfony/dotenv": "^5.4",
		"symfony/polyfill-ctype": "1.31.*",
		"symfony/polyfill-mbstring": "1.31.*",
		"symfony/yaml": "^5.4",
		"twig/twig": "^3.0",
		"woocommerce/action-scheduler": "^3.5"
	},
	"require-dev": {
		"filp/whoops": "^2.15",
		"micheh/phpcs-gitlab": "^1.1",
		"php-stubs/wordpress-tests-stubs": "^6.3",
		"phpcompatibility/php-compatibility": "^9.3",
		"phpcompatibility/phpcompatibility-wp": "*",
		"phpstan/extension-installer": "^1.3",
		"phpstan/phpstan": "^1.6",
		"phpstan/phpstan-deprecation-rules": "^1.1",
		"phpunit/phpunit": "^9.0",
		"phpunit/phpunit-dom-assertions": "^2.6",
		"sirbrillig/phpcs-variable-analysis": "v2.11.19",
		"slevomat/coding-standard": "^8.6",
		"sniccowp/php-scoper-wordpress-excludes": "^6.2",
		"squizlabs/php_codesniffer": "3.11.1",
		"szepeviktor/phpstan-wordpress": "^1.3",
		"wp-coding-standards/wpcs": "3.*",
		"yoast/phpunit-polyfills": "^3.0"
	},
	"scripts": {
		"lint": "phpcs --severity=1 --standard=phpcs.xml.dist --report=full --report-source",
		"test-integration:gitlab": "vendor/bin/phpunit --do-not-cache-result",
		"lint:gitlab": "vendor/bin/phpcs --severity=1 --standard=phpcs.xml.dist --report=full --report-\\\\Micheh\\\\PhpCodeSniffer\\\\Report\\\\Gitlab=phpcs-quality-report.json",
		"build-production": [
			"composer install --optimize-autoloader --no-dev",
			"npm run build"
		],
		"make-zip": [
			"Composer\\Config::disableProcessTimeout",
			"rm -f kudos-donations.zip",
			"php wp-cli.phar dist-archive . ./kudos-donations.zip --allow-root"
		],
		"release": [
			"@build-production",
			"@make-zip"
		]
	},
	"autoload": {
		"psr-4": {
			"IseardMedia\\Kudos\\": "includes/"
		},
		"files": [
			"includes/helpers.php"
		]
	}
}
