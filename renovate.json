{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		"mergeConfidence:all-badges"
	],
	"constraints": {
		"php": "7.4.0"
	},
	"constraintsFiltering": "strict",
	"composer": {
		"lockFileMaintenance": {
			"enabled": true
		},
		"rangeStrategy": "update-lockfile"
	}
}
