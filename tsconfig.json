{
	"include": ["src", "types"],
	"exclude": ["node_modules", "build"],
	"compilerOptions": {
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ES2020",
		"lib": ["DOM", "ESNext"],
		"jsx": "react-jsx",
		"noEmit": true,
		"skipLibCheck": true,
		"typeRoots": ["./node_modules/@types", "./types"]
	}
}
