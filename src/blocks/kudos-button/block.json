{
  "apiVersion": 2,
  "name": "iseardmedia/kudos-button",
  "title": "Kudos Button",
  "category": "widgets",
  "icon": "star",
  "description": "Adds a Kudos donate button or form to your post or page.",
  "keywords": [
    "kudos",
    "button",
    "donate"
  ],
  "textdomain": "kudos-donations",
  "attributes": {
    "button_label": {
      "type": "string",
      "default": "Donate now"
    },
    "campaign_id": {
      "type": "string",
      "default": "default"
    },
    "alignment": {
      "type": "string",
      "default": "none"
    },
    "type": {
      "type": "string",
      "default": "button"
    }
  },
  "supports": {
    "align": true,
    "customClassName": true,
    "typography": {
      "fontSize": false
    }
  },
  "example": {
    "attributes": {
      "label": "Donate now!",
      "alignment": "center"
    }
  },
  "editorScript": "file:./index.js",
  "style": "file:../../public/kudos-public.css"
}